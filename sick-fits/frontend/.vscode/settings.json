{
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "eslint.alwaysShowStatus": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "prettier.disableLanguages": [
        "javascript",
        "javascriptreact"
    ],
    "cSpell.words": [
        "nprogress",
        "radnika"
    ],
    "cSpell.ignoreWords": [
        "radnikanext",
        "segoe"
    ],
    "editor.tabSize": 2
}
